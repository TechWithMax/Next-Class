<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/courseImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/course_placeholder"
            app:cornerRadius="8dp"
            android:contentDescription="Course thumbnail"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Web Development Bootcamp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_on_surface"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/courseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn HTML, CSS, JavaScript, Node.js, and more"
                android:textSize="14sp"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/courseInstructor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dr. Angela Yu"
                    android:textSize="12sp"
                    android:textColor="@color/primary_color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Rating"/>

                    <TextView
                        android:id="@+id/courseRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.9"
                        android:textSize="12sp"
                        android:textColor="@color/primary_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Duration"/>

                    <TextView
                        android:id="@+id/courseDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45h"
                        android:textSize="12sp"
                        android:textColor="@color/primary_color"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bookmark_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:layout_gravity="top"
            android:contentDescription="Bookmark course"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
