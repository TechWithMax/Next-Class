<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="360dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="320dp"
        android:padding="20dp">

        <!-- Header Section (Profile + Info) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/instructor_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Circle"
                app:strokeColor="?attr/colorSurfaceVariant"
                app:strokeWidth="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Name -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instructor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                app:layout_constraintStart_toEndOf="@id/instructor_image"
                app:layout_constraintTop_toTopOf="@id/instructor_image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Dr. Sarah Johnson" />

            <!-- Subject -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instructor_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toEndOf="@id/instructor_image"
                app:layout_constraintTop_toBottomOf="@id/instructor_name"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Mathematics • Calculus" />

            <!-- Rating -->
            <LinearLayout
                android:id="@+id/rating_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/instructor_image"
                app:layout_constraintTop_toBottomOf="@id/instructor_subject"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star"
                    app:tint="?attr/colorPrimary" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/instructor_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="4.8"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorPrimary" />
            </LinearLayout>

            <!-- Experience -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/instructor_experience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintStart_toEndOf="@id/instructor_image"
                app:layout_constraintTop_toBottomOf="@id/rating_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="5+ years experience • PhD in Mathematics" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Spacer -->
        <View
            android:id="@+id/spacer1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_section" />

        <!-- Chips Section -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/subject_chips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:chipSpacingHorizontal="6dp"
            app:chipSpacingVertical="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer1">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="Calculus"
                android:textSize="12sp"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="Algebra"
                android:textSize="12sp"
                tools:visibility="visible" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="Statistics"
                android:textSize="12sp"
                tools:visibility="visible" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Spacer -->
        <View
            android:id="@+id/spacer2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subject_chips" />

        <!-- Bottom Section - Two Rows for Better Spacing -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer2"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Price and Status Row -->
            <LinearLayout
                android:id="@+id/price_status_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_contact"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="16dp">

                <!-- Price -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/instructor_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$25/hour"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold" />

                <!-- Status Container -->
                <LinearLayout
                    android:id="@+id/status_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_status"
                        android:backgroundTint="?attr/colorPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/instructor_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Available"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorPrimary"
                        tools:text="Available" />
                </LinearLayout>

            </LinearLayout>

            <!-- Contact Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_contact"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="60dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Contact"
                android:textSize="13sp"
                app:cornerRadius="20dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>